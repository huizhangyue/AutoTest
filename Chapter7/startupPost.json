  {
    "description": "模拟一个不带参数的post请求",
    "request": {
      "uri": "/post",
      "method": "post"
    },
    "response": {
      "headers": {
        "Content-Type": "text/html; charset=bgk"
      },
      "text": "这是一个没有参数的post请求"
    }
  },{
      "description": "这是一个带有参数的post请求",
      "request": {
        "uri": "/postwithparam",
        "method": "post",
        "queries":{
          "name": "lisi",
          "sex": "32"
        }
      },
      "response": {
        "headers": {
          "Content-Type": "text/html; charset=bgk"
        },
        "text": "李四你在哪里？"
      }
    }
]